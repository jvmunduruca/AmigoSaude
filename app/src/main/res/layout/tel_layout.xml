<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccentClear"
    tools:context=".Tel_Activity">
    // POLICIA 190
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border"
        android:padding="10dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/icone1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_policia"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icone1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tel_descricao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icone"
                android:text="SAMU"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:background="@drawable/green_border"
                />
            <TextView
                android:id="@+id/tel_numero1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tel_descricao"
                android:layout_toRightOf="@id/icone"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="190"
                android:textSize="40sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
    // AMBULANCIA 192
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border"
        android:padding="10dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/icone2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_ambulancia"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icone2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tel_descricao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icone"
                android:text="SAMU"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:background="@drawable/green_border"
                />
            <TextView
                android:id="@+id/tel_numero2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tel_descricao2"
                android:layout_toRightOf="@id/icone2"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="192"
                android:textSize="40sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>