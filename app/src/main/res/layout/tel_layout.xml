<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".Tel_Activity">
    // POLICIA 190
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:onClick="ligar"
        >
        <ImageView
            android:id="@+id/icone1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_policia"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icone1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tel_descricao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icone"
                android:text="POLÍCIA"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@color/colorAccentClear"
                />
            <TextView
                android:id="@+id/tel_numero1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tel_descricao"
                android:layout_toRightOf="@id/icone"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="190"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
