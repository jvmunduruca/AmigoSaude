<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Ps_opcao"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="#fff"
    >
        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icone_socorro"
            />
        <TextView
            android:id="@+id/ps_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img"
            android:text="Nome da Unidade"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:background="@drawable/green_border"
            />
        <TextView
            android:id="@+id/ps_endereco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ps_nome"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:text="EndereÃ§o da unidade"/>
</RelativeLayout>