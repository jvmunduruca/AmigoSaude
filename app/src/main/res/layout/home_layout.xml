<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_Activity"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/amigosaude_logo" />

    <ImageView
        android:id="@+id/img_unidades"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="10dp"
        android:src="@drawable/img_unidades" />

    <Button
        android:id="@+id/postos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccentClear"
        android:onClick="postos"
        android:text="@string/unidades_de_saude"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/img_emergencia"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="10dp"
        android:src="@drawable/img_emergencia" />

    <Button
        android:id="@+id/emergencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccentClear"
        android:onClick="emergencia"
        android:text="@string/emergencia"
        android:textColor="#FFF" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="VersÃ£o: 0.3 - Etecia - 2018" />
</LinearLayout>