<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PS_activity"
    android:background="@color/colorAccent"
    >
// ITEM 1
    <RelativeLayout
        android:id="@+id/UnidadeSantaCasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/prontosocorrosantacasa"
            />

        <TextView
            android:id="@+id/ps_SantaCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img"
            android:text="Santa Casa de Santo Amaro"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:background="@drawable/green_border"
            />

        <TextView
            android:id="@+id/ps_endereco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ps_SantaCasa"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:text="Rua Isabel Schimdt, 59."
            />
    </RelativeLayout>
// ITEM 2
    <RelativeLayout
        android:id="@+id/ps_municipalSA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/UnidadeSantaCasa"
        android:background="@drawable/white_border"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_munSA"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/prontosocorrosantacasa"
            />

        <TextView
            android:id="@+id/ps_MunSA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_munSA"
            android:text="Santa Casa de Santo Amaro"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:background="@drawable/green_border"
            />

        <TextView
            android:id="@+id/ps_EndMunSA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ps_MunSA"
            android:layout_toRightOf="@id/img_munSA"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:text="Rua Isabel Schimdt, 59."
            />
    </RelativeLayout>


</LinearLayout>