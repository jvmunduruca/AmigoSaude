<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".Ubs_Activiy">

    //Item1
    <RelativeLayout
        android:id="@+id/unidade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:onClick="informaUnidade1"
        >
        <ImageView
            android:id="@+id/icone1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ubs_jardim_aeroporto"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icone1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ubs_jardim_aeroporto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icone1"
                android:text="UBS Jardim Aeroporto - Dr. Massaki Udihara"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/green_border"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/jd_aeroporto_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ubs_jardim_aeroporto"
                android:layout_toRightOf="@id/icone1"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="R.Vieira de Moraes, 1752"
                android:textSize="13sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tel_jd_aeroporto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/jd_aeroporto_end"
                android:layout_toRightOf="@id/icone1"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="telefones: 5542-9672/5532-1152"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    //Item2
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border"
        android:padding="10dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/icone2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ubs_arriete"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icone2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ubs_arriete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icone"
                android:text="UBS Vila Arriete - Dr. Décio Pacheco Pedroso"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/green_border"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/arriete_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ubs_arriete"
                android:layout_toRightOf="@id/icone1"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="R. Julieta de Araújo Almeida, 44"
                android:textSize="13sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tel_arriete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tel_descricao"
                android:layout_toRightOf="@id/icone"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="telefones: 5611-4046/5614-5595"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    //Item3
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border"
        android:padding="10dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/icone3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ubs_niteroi"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icone3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ubs_niteroi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icone3"
                android:text="UBS Jardim Niterói"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/green_border"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/niteroi_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ubs_niteroi"
                android:layout_toRightOf="@id/icone3"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="Rua Samuel Arnold, 596"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tel_niteroi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tel_descricao"
                android:layout_toRightOf="@id/icone"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="telefones: 5611-0122/5611-0122"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>